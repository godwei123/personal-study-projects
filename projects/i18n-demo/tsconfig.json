{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "incremental": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "buildOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
  }
}
